
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/Login.cshtml";
}

    <style>
        /* LoginStyle.css */

        body {
            background-color: #2c3e50; /* Koyu mavi arka plan */
            padding-top: 40px;
        }

        .login-form {
            width: 340px;
            margin: 0 auto;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #34495e; /* Daha koyu bir mavi arka plan */
                padding: 30px;
                border-radius: 10px;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            }

            .login-form h2 {
                margin: 0 0 15px;
                text-align: center;
                color: #ecf0f1; /* Beyaz başlık metni */
            }

        .form-control,
        .btn {
            min-height: 38px;
            border-radius: 2px;
            margin-bottom: 10px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
            width: 100%;
            background-color: #1abc9c; /* Açık yeşil buton arka planı */
            border-color: #16a085; /* Buton kenarlık rengi */
            color: #fff; /* Buton metin rengi */
        }

            .btn:hover {
                background-color: #16a085; /* Butona fare üzeri geldiğinde daha koyu yeşil arka plan */
            }

    </style>

    <div  class="login-form">
        <form action="@Url.Action("Giris", "Home")" method="post">
            <h2 class="text-center">Giriş Yap</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <input type="text" class="form-control" name="kullaniciAdi" placeholder="Kullanıcı Adı" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="sifre" placeholder="Şifre" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
        </form>
    </div>

