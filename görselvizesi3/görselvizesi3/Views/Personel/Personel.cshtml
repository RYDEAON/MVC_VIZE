
@{
    ViewBag.Title = "Personel";
    Layout = "~/Views/Shared/Login.cshtml";
}


<style>
    .login-form form {
        margin-bottom: 15px;
        background: #263238;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        max-width: 300px; /* Maksimum genişlik 300px olarak ayarlandı */
        margin: 0 auto; /* Ortala */
    }

    .login-form h2 {
        margin: 0 0 15px;
        font-size: 24px;
        color: #fff;
        text-align: center;
    }

    .form-control,
    .btn {
        min-height: 34px;
        border-radius: 5px;
        font-size: 16px;
    }

    .form-control {
        padding: 10px;
        background-color: #455a64;
        border: 1px solid #607d8b;
        color: #eceff1;
    }

    .btn {
        font-size: 16px;
        background-color: #607d8b;
        color: #fff;
    }

        .btn:hover {
            background-color: #455a64;
        }

    .text-danger {
        font-size: 14px;
        color: #ff4d4d;
    }


</style>

<div class="login-form">
    <form action="@Url.Action("OgrenciBilgi", "Ogrenci")" method="post">
        <h2 class="text-center">Giriş Yap</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="kullaniciAdi" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Şifre" name="sifre" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
    </form>
</div></div>